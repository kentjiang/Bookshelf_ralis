<h1>Listing Book</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.content %></td>
    <td><%= article.user.email %></td>

    <td>
      <% if can? :edit, article %>
        <%= button_to 'Edit', edit_article_path(article) %>
      <% end %>
    </td>
    <td>
      <% if can? :destroy, article %>
        <%= button_to 'Destroy', article, confirm: 'Are you sure?', method: :delete %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

